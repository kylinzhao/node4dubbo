{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "allowJs": true,
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "noImplicitAny": true,
    "lib": [
      "es2015",
      "es5",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
